@inherits UIFormFieldBase

<RadzenFormField Text="@Label" Variant="@Variant">
    <ChildContent>
        <RadzenTextBox Name="@Name"  Value="@Value" Change="@ValueChanged" MaxLength="@MaxLength"/>
    </ChildContent>
    <Helper>
        @if (Required)
        {
            <RadzenRequiredValidator Component="@Name"  Text="Pole jest wymagane!"/>
        }
    </Helper>
</RadzenFormField>


@code {
    [Parameter]
    public string? Value { get; set; } = "";
    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    [Parameter]
    public int? MaxLength { get; set; }
}
