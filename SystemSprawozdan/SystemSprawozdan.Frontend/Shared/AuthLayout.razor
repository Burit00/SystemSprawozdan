@inherits LayoutComponentBase
@inject NavigationManager navigationManager

<main>
	<div class="auth-panel">
		<TitleBar />
		<TabBar TValue="string" ValueChanged="@NavigateTo" Data="@tabBar" @bind-ActiveIndex="@activeIndex"/>
		<div class="form">
			@Body
        </div>
	</div>
</main>


@code
{
    public string value { get; set; } = "";
    public int activeIndex { get; set; } = 1;

    public void NavigateTo(string link)
    {
        this.navigationManager.NavigateTo(link);
    }

    public IEnumerable<TabBarData<string>> tabBar { get; set; } = new TabBarData<string>[]
    {
        new()
        {
            Text = "Zarejestruj konto",
            Value = "/register"
        },
        new()
        {
            Text="Zaloguj",
            Value="/login"
        },
        new()
        {
            Text="Odzyskaj hasło",
            Value="/restore-password"
        },
    };
}